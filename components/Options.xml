<?xml version="1.0" encoding="utf-8" ?>

<component name="Options" extends="Group">

    <interface>

    </interface>

    <script type="text/brightscript" uri="pkg:/components/Options.brs" />

    <children>
        
        <SimpleLabel
            translation="[100,50]"
            text="Options"
            fontSize="48"
            fontUri="pkg:/fonts/Roobert-Bold.ttf" />  

        <Rectangle
            id="optionSelectRect"
            visible="true"
            color="0x26262CFF"
            width="400"
            height="75"
            translation="[90,200]" />

        <Group id="videoQualityOption" translation="[100,200]">
            <SimpleLabel 
                text="Video/Stream Quality"
                visible="true" />
            <SimpleLabel
                id="currentVideoQuality"
                translation="[400,0]" 
                text=""
                visible="true" />
            
            <Group id="videoQualityDropdown" focusable="true" translation="[400,0]" visible="false" >
                <Rectangle
                    id="videoQualitySelectRect"
                    visible="true"
                    color="0xA970FFFF"
                    width="300"
                    height="50"
                    translation="[200,0]" />
                <SimpleLabel 
                    text="1080p60"
                    translation="[200,0]"
                    visible="true" />
                <SimpleLabel 
                    text="1080p"
                    translation="[200,50]"
                    visible="true" />
                <SimpleLabel 
                    text="720p60"
                    translation="[200,100]"
                    visible="true" />
                <SimpleLabel 
                    text="720p"
                    translation="[200,150]"
                    visible="true" />
                <SimpleLabel 
                    text="480p"
                    translation="[200,200]"
                    visible="true" />
                <SimpleLabel 
                    text="360p"
                    translation="[200,250]"
                    visible="true" />
                <SimpleLabel 
                    text="160p"
                    translation="[200,300]"
                    visible="true" />
            </Group>
        </Group>

        <Group id="chatOption" translation="[100,300]" >
            <SimpleLabel 
                text="Chat (click the Rewind button to toggle)"
                visible="true" />
            <SimpleLabel 
                id="chatInfo"
                text=""
                translation="[700,0]"
                visible="true" />
        </Group>



    </children>

</component>
